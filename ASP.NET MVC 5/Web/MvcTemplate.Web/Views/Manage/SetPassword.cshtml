@model MvcTemplate.Web.ViewModels.Manage.SetPasswordViewModel
@{
    this.ViewBag.Title = "Create Password";
}

<h2>@(this.ViewBag.Title).</h2>
<p class="text-info">
    You do not have a local username/password for this site. Add a local
    account so you can log in without an external login.
</p>

@using (this.Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { role = "form" }))
{
    @(this.Html.AntiForgeryToken())

    <h4>Create Local Login</h4>
    <hr/>
    @(this.Html.ValidationSummary(string.Empty, new { @class = "text-danger" }))
    <div class="form-group row">
        @(this.Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 col-form-label" }))
        <div class="col-md-10">
            @(this.Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" }))
        </div>
    </div>
    <div class="form-group row">
        @(this.Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-form-label" }))
        <div class="col-md-10">
            @(this.Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" }))
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-md-2 col-md-10">
            <input type="submit" value="Set password" class="btn btn-primary"/>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}