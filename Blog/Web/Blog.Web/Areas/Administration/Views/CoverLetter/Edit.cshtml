@using Blog.Web.ViewModels.Common
@model Blog.Web.ViewModels.Administration.CoverLetter.InputModels.EditCoverLetterInputModel

@{
    this.ViewData["Title"] = "Edit CV";
}

@await Component.InvokeAsync("Header", new HeaderViewModel
{
    Title = "Edit CV",
    Content = "",
    ImageUrl = "https://res.cloudinary.com/dmvrh3bvc/image/upload/v1591631420/bg_bluegradient_lpytvz.jpg",
})
<vc:header></vc:header>

<div class="container mt-4">
    <form asp-area="Administration" asp-controller="CoverLetter" asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="@Model.Content"></label>
            <textarea class="form-control" asp-for="@Model.Content" rows="30"></textarea>
            <span asp-validation-for="@Model.Content" class="text-danger"></span>
        </div>
        <br />
        <button type="submit" class="btn btn-primary btn-lg btn-block">Edit</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        tinymce.init({
            selector: "#Content",
            plugins: [
                "image paste table link code media"
            ]
        });
    </script>
}
